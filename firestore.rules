rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    match /users/{userId} {
      allow read: if request.auth.uid == userId;
      allow write: if request.auth.uid == userId;
    }

    match /config/{configId} {
      function isSignedIn() {
        return request.auth != null;
      }
      allow read: if true;
      allow write: if isSignedIn();
    }

    match /classes/{classId} {
       function isSignedIn() {
        return request.auth != null;
      }
      allow read: if true;
      allow write: if isSignedIn();
    }

    match /tps/{tpId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isOwner() {
        return isSignedIn() && request.auth.uid == resource.data.author;
      }

      allow get: if true;
      
      allow list: if true;
      
      allow write: if isOwner();
    }

    match /students/{studentId}/{document=**} {
       function isSignedIn() {
        return request.auth != null;
      }
      
      allow read, write: if isSignedIn();
    }

    match /assignedTps/{studentId} {
      function isSignedIn() {
        return request.auth != null;
      }
      
      // Un enseignant authentifié peut lire le document d'un élève.
      // Le client devra filtrer les données dont il a besoin.
      allow get: if isSignedIn();
      
      // On interdit de lister tous les documents de tous les élèves.
      // La récupération doit se faire document par document.
      allow list: if false; 
      
      // Seul un enseignant authentifié peut créer ou mettre à jour les TPs assignés.
      allow create, update: if isSignedIn();
      allow delete: if false;
    }

    match /evaluations/{studentId} {
       function isSignedIn() {
        return request.auth != null;
      }
       allow read, write: if isSignedIn();
    }
  }
}
